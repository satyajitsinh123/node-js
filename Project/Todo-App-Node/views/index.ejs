<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <style>
      .container{
        border-radius: 50%;
      }
      body{
        background-color: rgb(22, 116, 108);
      }
    </style>
  </head>
  <body>
    <h1 class="bg-danger mt-5 text-white container text-center p-1">Todo-App</h1>
    <div class="main container mt-3 rounded bg-dark text-white pb-3">
      <h2 class="text-center py-2">Static Array Records</h2>
      <form
        class="text-center d-flex p-3 text-center"
        action="/add"
        method="post"
      >
        <input
          type="text"
          class="text-center m-auto form-control w-75"
          name="record"
          required
        />
        <button type="submit" class="ms-4 border-0 rounded rounded-5 bg-danger text-white">Add Record</button>
      </form>

      <ul class="list-unstyled text-center">
        <% records.forEach((record, index) => { %>
        <li class="p-2 w-75 mt-3 mb-3 bg-danger m-auto">
          <%= record %>
          <form
            action="/edit/<%= index %>"
            method="post"
            style="display: inline"
          >
            <button type="submit" class="border-0 rounded rounde-5">
              Edit
            </button>
          </form>
          <form
            action="/delete/<%= index %>"
            method="get"
            style="display: inline"
          >
            <button type="submit" class="border-0 rounded rounde-5">
              Delete
            </button>
          </form>
        </li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
  crossorigin="anonymous"
></script>
